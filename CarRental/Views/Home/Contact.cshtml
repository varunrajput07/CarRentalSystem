                            <input asp-for="Email" class="form-control" placeholder=" Email address">
                        </div>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-12">
                            <textarea asp-for="Message" class="form-control" placeholder="Write your message." cols="30" rows="10"></textarea>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-block btn-primary text-white py-3 px-5" style="width:200px">Send Message</button>


                </form>
            </div>
            <div class="col-lg-4 ml-auto">
